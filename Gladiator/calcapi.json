        "parameters": [
          {
            "name": "a",
            "in": "query",
            "description": "Hit points. Domyślna wartość to <code>20</code>.",
            "required": true,
            "default": "20",
            "enum": [
              "20"
            ]
          },
            {
                "name": "b",
                "in": "query",
                "description": "Attack points. Domyślna wartość to <code>5</code>.",
                "required": true,
                "default": "5",
                "enum": [
                    "5"
                ]
            },
            {
            "name": "c",
            "in": "query",
            "description": "Critical strike chance bonus. Domyślna wartość to <code>0.1</code>.",
            "required": true,
            "default": "0.1",
            "enum": [
              "0.1"
            ]
          },
          {
            "name": "d",
            "in": "query",
            "description": "Enenmy lvl. Domyślna wartość to <code>0</code>.",
            "required": true,
            "default": "0",
            "enum": [
              "0"
            ]
          }
        ],
        "responses": {}
      }
